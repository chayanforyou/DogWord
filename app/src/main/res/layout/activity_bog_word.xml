            a:gravity="center" />

        <TextView
            a:layout_width="@dimen/abc_text_size_display_1_material"
            a:layout_height="@dimen/abc_text_size_display_1_material"
            a:textAppearance="?android:attr/textAppearanceLarge"
            a:textSize="@dimen/abc_text_size_display_1_material"
            a:gravity="center" />

        <TextView
            a:layout_width="@dimen/abc_text_size_display_1_material"
            a:layout_height="@dimen/abc_text_size_display_1_material"
            a:textAppearance="?android:attr/textAppearanceLarge"
            a:textSize="@dimen/abc_text_size_display_1_material"
            a:gravity="center" />

        <TextView
            a:layout_width="@dimen/abc_text_size_display_1_material"
            a:layout_height="@dimen/abc_text_size_display_1_material"
            a:textAppearance="?android:attr/textAppearanceLarge"
            a:textSize="@dimen/abc_text_size_display_1_material"
            a:gravity="center" />

        <TextView
            a:layout_width="@dimen/abc_text_size_display_1_material"
            a:layout_height="@dimen/abc_text_size_display_1_material"
            a:textAppearance="?android:attr/textAppearanceLarge"
            a:textSize="@dimen/abc_text_size_display_1_material"
            a:gravity="center" />

        <TextView
            a:layout_width="@dimen/abc_text_size_display_1_material"
            a:layout_height="@dimen/abc_text_size_display_1_material"
            a:textAppearance="?android:attr/textAppearanceLarge"
